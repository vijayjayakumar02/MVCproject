@model EmpDetails

<h1>Update</h1>
<form method="post">
    <input hidden asp-for="Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />

                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Designation"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Designation" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="DepartmentId"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="DepartmentId" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="HireDate"></label>
                </div>
                <div class="col-6">
                    <input type="date" asp-for="HireDate" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" value="Update" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
